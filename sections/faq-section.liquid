{% comment %}
  FAQ Section Component
  Displays FAQ items in accordion format for collection pages
  Uses collection metafields for dynamic content
{% endcomment %}

{{ 'component-faq.css' | asset_url | stylesheet_tag }}

<div class="faq-section section-padding" style="
  --section-padding-top: {{ section.settings.padding_top }}px; 
  --section-padding-bottom: {{ section.settings.padding_bottom }}px;
  --title-font-size: {{ section.settings.title_font_size }}px;
  --title-font-weight: {{ section.settings.title_font_weight }};
  --title-color: {{ section.settings.title_color }};
  --subtitle-font-size: {{ section.settings.subtitle_font_size }}px;
  --subtitle-font-weight: {{ section.settings.subtitle_font_weight }};
  --subtitle-color: {{ section.settings.subtitle_color }};
  --question-font-size: {{ section.settings.question_font_size }}px;
  --question-font-weight: {{ section.settings.question_font_weight }};
  --question-color: {{ section.settings.question_color }};
  --answer-font-size: {{ section.settings.answer_font_size }}px;
  --answer-font-weight: {{ section.settings.answer_font_weight }};
  --answer-color: {{ section.settings.answer_color }};
  --question-hover-bg: {{ section.settings.question_hover_bg }};
  --icon-bg-color: {{ section.settings.icon_bg_color }};
  --icon-color: {{ section.settings.icon_color }};
  --border-radius: {{ section.settings.border_radius }}px;
  --box-shadow-blur: {{ section.settings.box_shadow_blur }}px;
  --box-shadow-spread: {{ section.settings.box_shadow_spread }}px;
  --box-shadow-opacity: {{ section.settings.box_shadow_opacity | divided_by: 100.0 }};
  --question-padding: {{ section.settings.question_padding }}px;
  --answer-padding: {{ section.settings.answer_padding }}px;
  --icon-size: {{ section.settings.icon_size }}px;
  --container-max-width: {{ section.settings.container_max_width }}px;
">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="faq-section__title{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.title }}
      </h2>
      {% if section.settings.subtitle != blank %}
        <p class="faq-section__subtitle{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {{ section.settings.subtitle }}
        </p>
      {% endif %}
    {% endif %}

        {% if collection.metafields.custom.faq_items != blank %}
      <div class="faq-section__container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {% assign faq_items = collection.metafields.custom.faq_items.value %}
        {% for faq_item in faq_items %}
          <div class="faq-item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" style="--animation-order: {{ forloop.index }};">
            <button class="faq-item__question" aria-expanded="false" aria-controls="faq-answer-{{ forloop.index }}">
              <span class="faq-item__question-text">{{ faq_item.question }}</span>
              <div class="faq-item__icon-wrapper">
                <svg class="faq-item__icon faq-item__icon--plus" width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M10 4V16M4 10H16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <svg class="faq-item__icon faq-item__icon--minus" width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M4 10H16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </button>
            <div class="faq-item__answer" id="faq-answer-{{ forloop.index }}">
              <div class="faq-item__answer-content">
                {{ faq_item.answer }}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <!-- No FAQ items configured for this collection -->
      <div class="faq-section__empty{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <p>{{ 'sections.faq_section.no_faq_items' | t }}</p>
      </div>
    {% endif %}
  </div>
</div>

{{ 'faq-section.js' | asset_url | script_tag }}

